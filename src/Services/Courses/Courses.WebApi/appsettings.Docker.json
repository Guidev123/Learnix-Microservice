{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://learnix.seq:5341"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Learnix.Courses.WebApi"
    }
  },
  "Authentication": {
    "Audience": "account",
    "TokenValidationParameters": {
      "ValidIssuers": [ "http://learnix.identity:8080/realms/learnix" ]
    },
    "MetadataAddress": "http://learnix.identity:8080/realms/learnix/.well-known/openid-configuration",
    "RequireHttpsMetadata": false
  },
  "KeycloakExtensions": {
    "HealthUrl": "http://learnix.identity:8080/health/",
    "AuthorizationUrl": "http://learnix.identity:8080/realms/learnix/protocol/openid-connect/auth",
    "TokenUrl": "http://learnix.identity:8080/realms/learnix/protocol/openid-connect/token"
  },
  "ConnectionStrings": {
    "Database": "Server=sqlserver,1433;Database=Learnix;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=True;",
    "Cache": "learnix.redis:6379",
    "Mongo": "mongodb://root:rootpassword@mongodb:27017/?authSource=admin&directConnection=true"
  },
  "MessageBusOptions": {
    "BootstrapServer": "broker:29092",
    "GroupId": "courses-consumers-group"
  },
  "OutboxOptions": {
    "IntervalInSeconds": 5,
    "BatchSize": 20
  },
  "InboxOptions": {
    "IntervalInSeconds": 5,
    "BatchSize": 20
  },
  "ExternalServices": {
    "UsersApi": "http://users-api:8080"
  },
  "OTEL_EXPORTER_OTLP_ENDPOINT": "http://learnix.jaeger:4317"
}